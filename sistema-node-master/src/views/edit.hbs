<div class="container">
    <div class="row">
        <div class="card card-body p-4 rounded-10 text-white" style="background-color: #046fa180;">
            <h3>Add a Tasks</h3>
            <form action="/tasks/{{task._id}}/edit" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Write a title:</label>
                    <input type="text" class="form-control" id="title" placeholder="Title" name="title"
                        value="{{task.title}}" />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" cols="80" name="description"
                        placeholder="Add a description">{{task.description}}</textarea>
                </div>
                {{#if task.group}}
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="group" id="flexRadioDefault1" value="true"
                        checked />
                    <label class="form-check-label" for="flexRadioDefault1">
                        Individual
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="group" id="flexRadioDefault2" value="false" />
                    <label class="form-check-label" for="flexRadioDefault2">
                        Equipo
                    </label>
                </div>
                {{else}}
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="group" id="flexRadioDefault1" value="true" />
                    <label class="form-check-label" for="flexRadioDefault1">
                        Individual
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="group" id="flexRadioDefault2" value="false"
                        checked />
                    <label class="form-check-label" for="flexRadioDefault2">
                        Equipo
                    </label>
                </div>
                {{/if}}
                <button type="submit" class="btn btn-primary">
                    <img src="/img/update.svg" alt="" width="20" height="20">Update</button>
            </form>
        </div>
    </div>
</div>